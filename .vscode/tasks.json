{
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "command": "sh scripts/debug.sh ${env:EXAMPLE_NAME}",
        "type": "shell",
        "dependsOn": [
            "compile_shader"
        ]
    },
    {
        "label": "build_release",
        "command": "sh scripts/release.sh ${env:EXAMPLE_NAME}",
        "type": "shell",
        "dependsOn": [
            "compile_shader"
        ]
    },
    {
        "label": "compile_shader",
        "command": "sh scripts/compile_shaders_selected.sh ${env:EXAMPLE_NAME}",
        "type": "shell",
        "dependsOn": [
            "set_example_name"
        ]
    },
    {
        "label": "set_example_name",
        "command": "export EXAMPLE_NAME=comp_ray_caster",
        "type": "shell"
    }]
}


